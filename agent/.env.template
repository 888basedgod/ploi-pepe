# lh-degen-001 Agent Configuration

# ===== Together API =====
TOGETHER_API_KEY=your_together_api_key_here

# ===== Twitter/X API =====
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret
TWITTER_BEARER_TOKEN=your_bearer_token

# ===== Discord =====
DISCORD_BOT_TOKEN=your_discord_bot_token

# ===== Telegram =====
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# ===== Agent Configuration =====
# System prompt for the agent persona
SYSTEM_PROMPT="you're an anonymous user on 4chan /biz/ and crypto twitter. casual, direct, unfiltered. no corporate speak."

# Generation parameters
TEMPERATURE=0.9
TOP_P=0.95
REPETITION_PENALTY=1.1
MAX_TOKENS=256

# ===== Orchestrator =====
# Scheduling variance (0.0-1.0) - adds randomness to posting times
SCHEDULE_VARIANCE=0.2

# Auto-post interval (seconds) - how often to post autonomously
AUTO_POST_INTERVAL=3600  # 1 hour

# ===== Memory =====
# Maximum conversation history to keep
MAX_HISTORY=20

# Storage paths
MEMORY_STORAGE_PATH=./data/memory.json
CONTEXT_STORAGE_PATH=./data/context.json

# ===== Logging =====
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
